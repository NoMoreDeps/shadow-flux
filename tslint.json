{
    "rules": {
        "one-line": [
            "check-catch",
            "check-else",
            "check-open-brace",
            "check-whitespace"
        ],
        "radix": true,
        "semicolon": [
            true,
            "always"
        ],
        "switch-default": true,
        "class-name": true,
        "curly": true,
        "eofline": true,
        "indent": [
            true,
            2
        ],
        "max-line-length": [
            true,
            130
        ],
        "member-ordering": [
            "static-before-instance",
            "variables-before-functions"
        ],
        "no-arg": true,
        "no-consecutive-blank-lines": true,
        "no-any": true,
        "align": [
            "arguments"
        ],
        "comment-format": [
            true,
            "check-space"
        ],
        "no-duplicate-variable": true,
        "no-eval": true,
        "no-internal-module": true,
        "no-trailing-whitespace": true,
        "no-var-keyword": true,
        "quotemark": [
            true,
            "double"
        ],
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "spaces",
                "index-signature": "spaces",
                "parameter": "spaces",
                "property-declaration": "spaces",
                "variable-declaration": "spaces"
            }
        ],
        "variable-name": [
            true,
            "ban-keywords"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type"
        ],
        "typedef": [
            "call-signature",
            "parameter",
            "property-declaration",
            "member-variable-declaration"
        ]
    }
}