{
    "compilerOptions": {
        "module": "system",
        "target": "es5",
        "noImplicitAny": true,
        "sourceMap": false,
        "outDir": "./bin",
        "declaration": true,
        "declarationDir": "./types",
        "baseUrl": "./",
        "paths": {
            "shadow-lib/*" : ["node_modules/shadow-lib/types/*"],
            "es6-promise"  : ["node_modules/es6-promise"]
        },
        "pretty": true
    },
    "exclude": [
        "node_modules",
        "types",
        "bin"
    ]
}