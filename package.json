{
  "name": "shadow-flux",
  "version": "2.0.0",
  "description": "Flux implementation",
  "main": "index.js",
  "repository": "git@github.com:fskorzec/shadow-flux.git",
  "author": "Fran√ßois Skorzec",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "jest": "^22.4.3",
    "ts-jest": "22.4.3",
    "typescript": "^2.8.3"
  },
  "scripts": {
    "test": "jest --coverage"
  },
  "jest": {
    "verbose": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json",
        "skipBabel": true
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/Tests/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
