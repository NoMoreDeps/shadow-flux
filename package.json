{
  "name": "shadow-flux",
  "version": "2.0.12",
  "description": "Flux implementation",
  "main": "Index.js",
  "types": "Index.d.ts",
  "repository": "git@github.com:nomoredeps/shadow-flux.git",
  "author": "Fran√ßois Skorzec",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "jest": "^26.0.1",
    "ts-jest": "^26.1.0",
    "typescript": "^3.9.5"
  },
  "scripts": {
    "test": "jest --coverage",
    "prepare-publish": "node scripts/publish.js",
    "clean": "node scripts/clean.js",
    "clean-all": "node scripts/cleanall.js",
    "build": "tsc",
    "buildw": "tsc -w"
  },
  "jest": {
    "verbose": true,
    "testURL": "http://localhost/",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json",
        "skipBabel": true
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/__tests__/Tests/.*$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
